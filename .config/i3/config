# set modifier
set $super Mod4
set $alt Mod1


# Window borders
new_window pixel 5
#smart_borders on
gaps inner 10
gaps outer 10

set $coloract "#114A70"
set $colorin "#012464"
set_from_resource $color15 i3wm.color15 "#c8ffff"
set_from_resource $split i3wm.color10 "#4e75e0"
set_from_resource $coloru i3wm.color2 "#4860A1"
set_from_resource $color0 i3wm.color0 "#010417"
set_from_resource $color8 i3wm.color8 "#010a49"

# class                 border    backgr    text    indicator child_border
client.focused          $coloract $coloract $color15 $coloract  $coloract
client.focused_inactive $coloract $coloract $color15 $coloract  $coloract
client.unfocused        $coloract $coloract $coloract $coloract  $coloract
client.urgent           $coloract $coloract $coloract $coloract $coloract
client.placeholder      $coloract $coloract $coloract $coloract    $coloract
client.background       $coloract


# Use Mouse+$super to drag floating windows to their wanted position
floating_modifier $super

#autostart
exec --no-startup-id sh ~/Startup/nvidia.sh
exec --no-startup-id sh ~/.screenlayout/1.sh
exec --no-startup-id nitrogen --restore
exec_always --no-startup-id sh ~/.config/polybar/launch.sh
exec --no-startup-id nm-applet
exec --no-startup-id spotify
#exec --no-startup-id sh ~/Startup/glava1.sh
exec --no-startup-id compton
exec_always --no-startup-id autotiling
exec --no-startup-id sh ~/Startup/ethernetfix.sh
exec_always --no-startup-id sh ~/Startup/pywal.sh`
# start a terminal
bindsym $super+Return exec --no-startup-id st

# application rules
        # chromium
                assign [class="Chromium"] → 1
        # spotify
                for_window [class="Spotify"] move to workspace 2
        # discord
                assign [class="discord"] → 2
        # VsCode
                assign [class="code-oss"] → 5
        #Libreoffice
                  assign [class="libreoffice"] → 5
        # google-chrome
                assign [class="Google-chrome"] → 1
        # st
                assign [class="st-256color"] → 4
        #ranger
                assign [title="ranger"] → 3
        #Firefox - toggl
                assign [class="firefox"] → 6
                assign [class="Toggl Desktop"] 6
        #Lutris
                assign [class="lutris"] → 7
                assign [class="Lutris"] → 7
        #Vbox
                assign [class="VirtualBox Manager"] → 7
          #thunar
                  assign [class="thunar"] → 3
                  assign [class="Thunar"] → 3


# start dmenu (a program launcher)
bindsym $super+d exec rofi -lines 12 -padding 18 -width 60 -location 0 -show drun -sidebar-mode -columns 3 -font 'Fira Sans 10' -opacity "85"

# common apps keybinds
bindsym Print exec scrot 'Cheese_%a-%d%b%y_%H.%M.png' -e 'viewnior ~/$f'
bindsym $super+l exec i3lock -i ~/.wallpaper.png
bindsym $super+Shift+w exec chromium;workspace 1;focus
bindsym $super+Shift+f exec thunar;workspace 3;focus
bindsym $super+Shift+X exec --no-startup-id st -T ranger -c sh -e ranger
#change volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-
bindsym XF86AudioMute exec amixer set Master toggle

# music control
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioStop exec mpc stop

# kill focused window
bindsym $super+c kill
bindsym $alt+F4 kill

# change focus
bindsym $super+Left focus left
bindsym $super+Down focus down
bindsym $super+Up focus up
bindsym $super+Right focus right

# move focused window
bindsym $super+Shift+Left move left
bindsym $super+Shift+Down move down
bindsym $super+Shift+Up move up
bindsym $super+Shift+Right move right

# split in horizontal orientation
bindsym $super+h split h

# split in vertical orientation
bindsym $super+v split v

# enter fullscreen mode for the focused container
bindsym $super+f fullscreen toggle

# change container layout split
bindsym $super+s layout toggle split

# toggle tiling / floating
bindsym $super+space floating toggle

# change focus between tiling / floating windows
bindsym $super+Shift+space focus mode_toggle

# switch to workspace
bindsym $alt+Control+Right workspace next
bindsym $alt+Control+Left workspace prev
bindsym $super+1 workspace 1
bindsym $super+2 workspace 2
bindsym $super+3 workspace 3
bindsym $super+4 workspace 4
bindsym $super+5 workspace 5
bindsym $super+6 workspace 6
bindsym $super+7 workspace 7
bindsym $super+8 workspace 8
#bindsym $super+9 workspace 9
#bindsym $super+0 workspace 10

# move focused container to workspace
bindsym $super+Shift+1 move container to workspace 1
bindsym $super+Shift+2 move container to workspace 2
bindsym $super+Shift+3 move container to workspace 3
bindsym $super+Shift+4 move container to workspace 4
bindsym $super+Shift+5 move container to workspace 5
bindsym $super+Shift+6 move container to workspace 6
bindsym $super+Shift+7 move container to workspace 7
bindsym $super+Shift+8 move container to workspace 8
#bindsym $super+Shift+9 move container to workspace 9
#bindsym $super+Shift+0 move container to workspace 10

# use workspaces on different monitors
workspace "1" output HDMI-0
workspace "2" output DP-5
workspace "3" output HDMI-0
workspace "4" output HDMI-0
workspace "5" output HDMI-0
workspace "6" output DP-5
workspace "7" output HDMI-0
workspace "8" output DP-5
#workspace "9" output DP-5
#workspace "10" output HDMI-0

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $super+Shift+r restart

# exit i3
bindsym $super+q exec "i3-msg exit"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt
        bindsym Return mode "default"
}
bindsym $super+r mode "resize"

